# vim: ft=hyprlang
source = ~/.config/hypr/mocha.conf

# See https://wiki.hypr.land/Configuring/Monitors/
{{- if eq .chezmoi.hostname "puppy" }}
monitor=eDP-1,1920x1080@60.02,auto,1
{{- end }}
{{- if eq .chezmoi.hostname "headroom" }}
monitor=HDMI-A-2,1920x1080@144,0x0,1
monitor=HDMI-A-1,1440x900@74.98,1920x180,1
{{- end }}

$terminal = alacritty msg create-window
$fileManager = dolphin
$menu = rofi -show drun
$mod = SUPER

exec-once = wl-paste --type text --watch cliphist store
exec-once = wl-paste --type image --watch cliphist store

env = XCURSOR_SIZE,24
env = HYPRCURSOR_SIZE,24

general {
  layout = dwindle
  no_focus_fallback = false
  resize_on_border = true
  extend_border_grab_area = 8
  resize_corner = 0

  snap {
    enabled = true
    window_gap = 4
    monitor_gap = 4
    border_overlap = true
  }

  allow_tearing = true
  border_size = 2
  no_border_on_floating = false
  gaps_in = 2
  gaps_out = 8
  gaps_workspaces = 48

  col.inactive_border = $surface0
  col.active_border = $blue
  col.nogroup_border = $surface0
  col.nogroup_border_active = $red
  hover_icon_on_border = true
}

decoration {
  rounding = 8
  rounding_power = 2
  dim_special = 0.5
  border_part_of_window = true

  blur {
    enabled = false
    size = 8
    passes = 4
    ignore_opacity = true
    new_optimizations = true
    xray = false
    noise = 0.012
    contrast = 0.9
    brightness = 0.8
    vibrancy = 0.2
    vibrancy_darkness = 0
    special = false
    popups = false
    input_methods = false
  }

  shadow {
    enabled = true
    range = 1
    render_power = 4
    sharp = true
    ignore_window = true
    color = $crust
    color_inactive = $crust
    scale = 1
  }
}

animations {
  enabled = yes
  bezier = linear,0,0,1,1
  bezier = quart,0.165,0.84,0.44,1
  bezier = expo,0.19,1,0.22,1

  animation = global, 1, 5, quart
  animation = border, 1, 2.5, quart
  animation = windows, 1, 2.5, quart, popin 50%
  animation = windowsIn, 1, 2.5, quart, popin 87.5%
  animation = windowsOut, 1, 2.5, linear, popin 87.5%
  animation = fadeIn, 1, 2.5, quart
  animation = fadeOut, 1, 1.25, linear
  animation = fade, 1, 2.5, quart
  animation = layers, 1, 3, quart, popin 50%
  animation = layersIn, 1, 3, quart, fade
  animation = layersOut, 1, 3, quart, fade
  animation = fadeLayersIn, 1, 2.5, quart
  animation = fadeLayersOut, 0
  animation = workspaces, 1, 3, expo, slidevert
  animation = specialWorkspace, 1, 3, expo, fade
  animation = zoomFactor, 1, 3, quart
}

dwindle {
  pseudotile = false
  force_split = 2
  preserve_split = false
  smart_split = false
  smart_resizing = true
  permanent_direction_override = false
  special_scale_factor = 0.85
  split_width_multiplier = 1
  use_active_for_splits = true
  default_split_ratio = 1
  split_bias = 0
}

misc {
  mouse_move_enables_dpms = true
  key_press_enables_dpms = true
  always_follow_on_dnd = true
  layers_hog_keyboard_focus = true
  animate_manual_resizes = false
  animate_mouse_windowdragging = false
  disable_autoreload = false
  enable_swallow = true
  swallow_regex = alacritty
  focus_on_activate = true
  mouse_move_focuses_monitor = true
  allow_session_lock_restore = true
  close_special_on_empty = true
  new_window_takes_over_fullscreen = 0
  exit_window_retains_fullscreen = false
  initial_workspace_tracking = 2
  middle_click_paste = false
  render_unfocused_fps = 10
  disable_xdg_env_checks = true
  disable_hyprland_qtutils_check = true
  lockdead_screen_delay = 1000
  enable_anr_dialog = false
  anr_missed_pings = 0

  disable_splash_rendering = true
  disable_hyprland_logo = true
  force_default_wallpaper = 0
  vfr = true
  vrr = 0
  background_color = $crust
}

binds {
  pass_mouse_when_bound = false
  scroll_event_delay = 0
  workspace_back_and_forth = false
  hide_special_on_workspace_change = true
  allow_workspace_cycles = false
  workspace_center_on = 1
  focus_preferred_method = 0
  ignore_group_lock = false
  movefocus_cycles_fullscreen = false
  movefocus_cycles_groupfirst = false
  disable_keybind_grabbing = false
  window_direction_monitor_fallback = true
  allow_pin_fullscreen = false
  drag_threshold = 0
}

xwayland {
  enabled = true
  use_nearest_neighbor = true
  force_zero_scaling = true
  create_abstract_socket = false
}

cursor {
  no_hardware_cursors = 2
  no_break_fs_vrr = 2
  min_refresh_rate = 60
  hotspot_padding = 1
  inactive_timeout = 0
  no_warps = false
  persistent_warps = false
  warp_on_change_workspace = 0
  warp_on_toggle_special = 0
  default_monitor = HDMI-A-2
  zoom_factor = 1
  zoom_rigid = false
  enable_hyprcursor = true
  hide_on_key_press = false
  hide_on_touch = true
  use_cpu_buffer = 2
}

input {
  kb_layout = us
  numlock_by_default = true
  resolve_binds_by_sym = false
  repeat_rate = 25
  repeat_delay = 600
  sensitivity = 0
  accel_profile = flat
  force_no_accel = false
  left_handed = false
  scroll_button = 0
  scroll_button_lock = 0
  scroll_factor = 1
  natural_scroll = false
  follow_mouse = 1
  follow_mouse_threshold = 0
  focus_on_close = 0
  mouse_refocus = false
  float_switch_override_focus = 1
  special_fallthrough = false
  off_window_axis_events = 1
  emulate_discrete_scroll = 1

  touchpad {
    disable_while_typing = false
    natural_scroll = true
    scroll_factor = 1
    middle_button_emulation = false
    clickfinger_behavior = false
    tap-to-click = true
    drag_lock = true
    tap-and-drag = true
    flip_x = false
    flip_y = false
  }
{{ if eq .chezmoi.hostname "headroom" }}
  tablet {
    output = "HDMI-A-2"
  }
{{- end }}
}

device {
  name = syna32ea:00-06cb:ce17-touchpad
  accel_profile = adaptive
}
{{ if eq .chezmoi.hostname "headroom" }}
workspace = 1, monitor:HDMI-A-2
workspace = 2, monitor:HDMI-A-2
workspace = 3, monitor:HDMI-A-2
workspace = 4, monitor:HDMI-A-2

workspace = 10, monitor:HDMI-A-1
workspace = 9, monitor:HDMI-A-1
workspace = 8, monitor:HDMI-A-1
workspace = 7, monitor:HDMI-A-1
{{- end }}

gesture = 3, vertical, workspace

gestures {
  workspace_swipe_min_speed_to_force = 5
  workspace_swipe_cancel_ratio = 0.125
}

bind = $mod, RETURN, exec, $terminal
bind = $mod, R, exec, $menu
bind = $mod, C, killactive,
bind = $mod, Q, exec, rofi -show power-menu -modi power-menu:rofi-power-menu
bind = $mod, V, togglefloating,
bind = $mod, F, fullscreen,

bind = $mod SHIFT, S, exec, grim -g "$(slurp -d)" - | swappy -f -

bind = $mod SHIFT, V, exec, cliphist list | rofi -dmenu | cliphist decode | wl-copy

bind = $mod, left, movefocus, l
bind = $mod, right, movefocus, r
bind = $mod, up, movefocus, u
bind = $mod, down, movefocus, d

bind = $mod, h, movefocus, l
bind = $mod, l, movefocus, r
bind = $mod, k, movefocus, u
bind = $mod, j, movefocus, d

bind = $mod SHIFT, left, movewindow, l
bind = $mod SHIFT, right, movewindow, r
bind = $mod SHIFT, up, movewindow, u
bind = $mod SHIFT, down, movewindow, d

bind = $mod SHIFT, h, movewindow, l
bind = $mod SHIFT, l, movewindow, r
bind = $mod SHIFT, k, movewindow, u
bind = $mod SHIFT, j, movewindow, d

bind = $mod, 1, workspace, 1
bind = $mod, 2, workspace, 2
bind = $mod, 3, workspace, 3
bind = $mod, 4, workspace, 4
bind = $mod, 5, workspace, 5
bind = $mod, 6, workspace, 6
bind = $mod, 7, workspace, 7
bind = $mod, 8, workspace, 8
bind = $mod, 9, workspace, 9
bind = $mod, 0, workspace, 10

bind = $mod SHIFT, 1, movetoworkspace, 1
bind = $mod SHIFT, 2, movetoworkspace, 2
bind = $mod SHIFT, 3, movetoworkspace, 3
bind = $mod SHIFT, 4, movetoworkspace, 4
bind = $mod SHIFT, 5, movetoworkspace, 5
bind = $mod SHIFT, 6, movetoworkspace, 6
bind = $mod SHIFT, 7, movetoworkspace, 7
bind = $mod SHIFT, 8, movetoworkspace, 8
bind = $mod SHIFT, 9, movetoworkspace, 9
bind = $mod SHIFT, 0, movetoworkspace, 10

bind = $mod, MINUS, togglespecialworkspace, scratch
bind = $mod SHIFT, MINUS, movetoworkspace, special:scratch

bind = $mod, mouse_down, workspace, m-1
bind = $mod, mouse_up, workspace, m+1

bindm = $mod, mouse:272, movewindow
bindm = $mod, mouse:273, resizewindow

bindel = ,XF86AudioRaiseVolume, exec, wpctl set-volume -l 1 @DEFAULT_AUDIO_SINK@ 5%+
bindel = ,XF86AudioLowerVolume, exec, wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
bindel = ,XF86AudioMute, exec, wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
bindel = ,XF86AudioMicMute, exec, wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle
bindel = ,XF86MonBrightnessUp, exec, brightnessctl -e4 -n2 set 5%+
bindel = ,XF86MonBrightnessDown, exec, brightnessctl -e4 -n2 set 5%-

bindl = , XF86AudioNext, exec, playerctl next
bindl = , XF86AudioPause, exec, playerctl play-pause
bindl = , XF86AudioPlay, exec, playerctl play-pause
bindl = , XF86AudioPrev, exec, playerctl previous

workspace = special:scratch, on-created-empty: $terminal
workspace = w[tv1]s[false], gapsout:0, gapsin:0
workspace = f[1]s[false], gapsout:0, gapsin:0
windowrule = bordersize 0, floating:0, onworkspace:w[tv1]s[false]
windowrule = rounding 0, floating:0, onworkspace:w[tv1]s[false]
windowrule = bordersize 0, floating:0, onworkspace:f[1]s[false]
windowrule = rounding 0, floating:0, onworkspace:f[1]s[false]

windowrule = suppressevent maximize, class:.*
windowrule = nofocus,class:^$,title:^$,xwayland:1,floating:1,fullscreen:0,pinned:0

windowrule = immediate, class:.*
windowrule = rounding 0, class:steam

